
<div class="shadow p-3 mb-5 bg-white rounded">
  <div class="px-5">
    <h1><%= @post.title %></h1>
    <p class="text-muted">
      <strong>Por <%= @post.author %></strong><br>
      <%= l @post.created_at, format: :long %>
    </p>

  </div>
  
  <div class="px-5">
    <%= @post.body.gsub("\n","<br>").html_safe %>
  </div>
  
</div>

<div class="m-5">
  <div class="text-center">
    <h4>
      <%= pluralize( @post.comments.count, 'ComentÃ¡rio' ) %>

      <% if @post.comments.count.zero? %>
        <span class="badge badge-success">Seja o primeiro a comentar!</span>
      <% end %>
    </h4>

  </div>

  <%= form_with model: @comment, local: true do |form| %>
    <!-- campo id escondido --> 
    <%= form.hidden_field :post_id, value: @post.id %>

    <div class="form-group">
      <%= form.label :author %>
      <%= form.text_field :author, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 2 %>
    </div>

    <%= form.submit 'Enviar', class: 'btn btn-primary', data: {disable_with: 'Enviando...'} %>

  <% end %>

</div>